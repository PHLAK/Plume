<div class="flex flex-col justify-center items-center gap-4 text-stone-600 py-2 md:flex-row">
    <div class="flex items-center gap-4">
        <div title="{{ post.published.toDayDateTimeString }}" class="flex items-center gap-1 text-sm md:text-base">
            {{ include('icons/light/calendar.svg', { class: 'size-4 md:size-6' }) }}
            {{ post.published.format('F jS, Y') }}
        </div>

        {% if post.author %}
            <div class="flex items-center gap-1 text-sm md:text-base">
                {{ include('icons/light/user.svg', { class: 'size-4 md:size-6' }) }}
                {{ post.author }}
            </div>
        {% endif %}
    </div>

    {% if post.tags %}
        <div class="flex items-center gap-1 text-xs">
            {% for tag in post.tags %}
                <a href="{{ url_for('tag', { tag: tag }) }}" class="block px-1.5 py-1 rounded bg-stone-600 text-white">
                    {{ tag }}
                </a>
            {% endfor %}
        </div>
    {% endif %}
</div>
