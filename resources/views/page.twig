{% extends "layouts/app.twig" %}
{% set title = page.title %}

{% block content %}
    <div id="page" class="space-y-8 my-12">
        <h1 class="text-2xl font-light text-center md:text-4xl dark:text-stone-200">
            {{ page.title }}
        </h1>

        <article class="prose prose-stone prose-lg max-w-none md:prose-xl dark:prose-invert">
            {{ page.body | raw }}
        </article>
    </div>
{% endblock %}
