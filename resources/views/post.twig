{% extends "layouts/app.twig" %}
{% set title = post.title %}

{% block content %}
    <div id="post" class="space-y-8 my-12">
        <h1 class="text-2xl font-light text-center md:text-4xl">
            {{ post.title }}
        </h1>

        {% include "components/metadata.twig" %}

        {% if post.image %}
            <div id="post-image">
                <img src="{{ post.image.url }}">

                {% if post.image.caption %}
                    <div class="prose text-center max-w-none my-2">
                        {{ markdown(post.image.caption) | raw }}
                    </div>
                {% endif %}
            </div>
        {% endif %}

        <article class="prose prose-lg max-w-none md:prose-xl">
            {{ post.body | raw }}
        </article>
    </div>
{% endblock %}
