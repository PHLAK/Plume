{% extends "layouts/app.twig" %}
{% set title = post.title %}

{% block content %}
    <div id="post" class="space-y-6">
        <h1 class="text-4xl font-light text-center">
            {{ post.title }}
        </h1>

        {% include "components/metadata.twig" %}

        {% if post.image %}
            <div id="post-image">
                <img src="{{ post.image.url }}">

                {% if post.image.caption %}
                    <div class="prose text-center max-w-none my-2">{{ post.image.caption | raw }}</div>
                {% endif %}
            </div>
        {% endif %}

        <article class="prose prose-xl max-w-none">
            {{ post.body | raw }}
        </article>
    </div>
{% endblock %}
