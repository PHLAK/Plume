<!DOCTYPE html>

<meta charset="utf-8">
<meta name="description" content="{{ config('meta_description') }}">
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="icon" href="/images/favicon.svg">
<link rel="dns-prefetch" href="//fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com">

{{ vite(['resources/css/app.css', 'resources/js/app.js']) | raw }}

{{ scripts() | raw }}

<title>{% if title %}{{ title }} &bull; {% endif %}{{ config('site_title') }}</title>

<div class="bg-stone-100 {{ theme }}" x-data="application" x-effect="storeThemeCookie($store.theme)" :class="{ 'dark': $store.theme === 'dark' }">
    <div class="flex flex-col min-h-screen font-sans dark:bg-stone-800">
        {% include "components/header.twig" %}

        <div id="content" class="container flex flex-col grow max-w-4xl mx-auto px-4">
            {% block content %}{% endblock %}
        </div>

        {% include "components/footer.twig" %}
    </div>
</div>
