{
    "name": "phlak/plume",
    "description": "Self-hosted, flat-file blogging platform",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Kankiewicz",
            "email": "Chris@ChrisKankiewicz.com"
        }
    ],
    "support": {
        "issues": "https://github.com/PHLAK/Plume/issues"
    },
    "require": {
        "php": ">= 8.4",
        "illuminate/collections": "^12.28",
        "league/commonmark": "^2.7",
        "nesbot/carbon": "^3.10",
        "php-di/php-di": "^7.1",
        "php-di/slim-bridge": "^3.4",
        "slim/psr7": "^1.7",
        "slim/slim": "^4.15",
        "slim/twig-view": "^3.4",
        "spatie/yaml-front-matter": "^2.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phlak/coding-standards": "^4.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5",
        "symfony/var-dumper": "^7.3"
    },
    "suggest": {
        "ext-apcu": "Required to use the APCu cache driver",
        "ext-memcached": "Required to use the Memcached driver",
        "ext-redis": "Required to use the Redis cache driver"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
      "optimize-autoloader": true,
      "platform": {
          "php": "8.4"
      },
      "platform-check": true,
      "sort-packages": true
  },
  "scripts": {
      "serve": "php --server localhost:8080 --docroot public"
  }
}
